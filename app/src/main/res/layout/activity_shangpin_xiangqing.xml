<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shangpin_xiangqing">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/coral"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/coral"
                android:gravity="center|center_horizontal|center_vertical"
                android:onClick="fanhui"
                android:text="返回" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="-60dp"
                android:text="商品详情"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/lightgray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:padding="5dp"
                        android:background="@color/white"
                        android:layout_marginBottom="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/main1"
                                android:id="@+id/touxiang"
                                android:layout_width="70dp"
                                android:layout_height="70dp" />
                            <LinearLayout
                                android:gravity="center_vertical|center_horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.6"
                                android:orientation="vertical">
                                <TextView
                                    android:singleLine="true"
                                    android:textColor="@color/coral"
                                    android:id="@+id/nickname"
                                    android:text="nickname"
                                    android:textSize="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:singleLine="true"
                                    android:id="@+id/time"
                                    android:text="time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:gravity="center_vertical|center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/coral"
                                    android:textSize="25dp"
                                    android:singleLine="true"
                                    android:id="@+id/gname"
                                    android:text="gname"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:layout_marginRight="10dp"
                                    android:textSize="20dp"
                                    android:textColor="@color/coral"
                                    android:gravity="center_vertical"
                                    android:id="@+id/price"
                                    android:text="price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />
                                <TextView

                                    android:gravity="center_vertical"
                                    android:id="@+id/oprice"
                                    android:text="oprice"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical|end"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:padding="2dp"
                                    android:layout_margin="3dp"
                                    android:textSize="15dp"
                                    android:textColor="@color/coral"
                                    android:background="@color/lavender"
                                    android:gravity="center_vertical"
                                    android:id="@+id/hownew"
                                    android:text="hownew"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="2dp"
                                    android:layout_margin="3dp"
                                    android:textSize="15dp"
                                    android:textColor="@color/coral"
                                    android:background="@color/lavender"
                                    android:gravity="center_vertical"
                                    android:id="@+id/getway"
                                    android:text="getway"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:padding="2dp"
                                    android:layout_margin="3dp"
                                    android:textSize="15dp"
                                    android:textColor="@color/coral"
                                    android:background="@color/lavender"
                                    android:gravity="center_vertical"
                                    android:id="@+id/type"
                                    android:text="type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <LinearLayout
                                    android:layout_marginRight="20dp"
                                    android:gravity="center_vertical|end"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:src="@drawable/buju1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:text="人气:"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal|center_vertical"/>
                                    <TextView
                                        android:gravity="center_vertical|center_horizontal"
                                        android:textColor="@color/coral"
                                        android:id="@+id/scannum"
                                        android:text="scannum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@drawable/mian_bg"
                                android:padding="2dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/main1" />
                            <LinearLayout
                                android:layout_marginLeft="5dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="vertical">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2">
                                    <TextView
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/mian_bg"
                                        android:paddingTop="15dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:paddingBottom="5dp"
                                        android:id="@+id/detail"
                                        android:text="detail"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                    <TextView
                                        android:layout_marginTop="8dp"
                                        android:padding="5dp"
                                        android:background="@drawable/mian_bg"
                                        android:textColor="@color/coral"
                                        android:text="简介"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                </RelativeLayout>
                                <LinearLayout
                                    android:id="@+id/chat"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:onClick="chat"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_marginTop="5dp"
                                        android:src="@drawable/buju1"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="和我聊天"
                                        android:textSize="15dp" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="5dp"
                        android:background="@color/lightgray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="1dp"
                                android:src="@drawable/buju1"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                            <TextView
                                android:textColor="@color/coral"
                                android:text="评论"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textColor="@color/coral"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/commentnum"
                                android:text="评论数"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="570dp">
                            <ExpandableListView
                                android:id="@+id/detail_page_lv_comment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:listSelector="@android:color/transparent"
                                android:scrollbars="none"/>
                            <LinearLayout
                                android:visibility="visible"
                                android:id="@+id/layout_back"
                                android:gravity="center_vertical|center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:textSize="20dp"
                                    android:text="还没有评论,来抢沙发吧！"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ImageView
                                    android:src="@drawable/main1"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp" />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/pinglun_layout"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/lightgray"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <Button
                    android:layout_margin="5dp"
                    android:background="@drawable/buju1"
                    android:id="@+id/lianxi"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/mian_bg"
                    android:maxLength="20"
                    android:id="@+id/commentedt"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>
                <Button
                    android:textColor="@color/coral"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/mian_bg"
                    android:id="@+id/commentbtn"
                    android:text="评论"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/buy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/mian_bg"
                    android:text="私聊"
                    android:textColor="@color/coral" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
