<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zhu_ce"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zhuce"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="用户注册账号"
            android:textColor="#FF4500"
            android:layout_gravity="center"
            android:textSize="30dip"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/textView1"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="学         号:"
                    android:textColor="@color/orangered"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/xuehao"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:background="@drawable/zhu_ce1"
                    android:digits="0123456789"
                    android:hint="请输入学号"
                    android:maxLength="18"
                    android:singleLine="true" />

                <TextView


                    android:id="@+id/xuehao_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="*学号号至少为11位！"
                    android:textColor="@color/red"
                    android:textSize="12dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="姓         名"
                    android:textColor="@color/orangered"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/xingming"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:background="@drawable/zhu_ce1"
                    android:hint="输入名字"
                    android:maxLength="18"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/mingzi_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="*不能为空！"
                    android:textColor="@color/red"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="密         码:"
                    android:textColor="@color/orangered"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/mima"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/zhu_ce1"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyz"
                    android:hint="输入密码"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/mima_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="*密码不能少于6位！"
                    android:textColor="@color/red"
                    android:textSize="12dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="重复密码:"
                    android:textColor="@color/orangered"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/mima_re"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:background="@drawable/zhu_ce1"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyz"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/remima_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="*密码不一致！"
                    android:textColor="@color/red"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="联系电话:"
                    android:textColor="@color/orangered"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/dianhua"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/zhu_ce1"
                    android:hint="电话"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/dianhua_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="*不能为空!"
                    android:textColor="@color/red"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="性别:"
                    android:textColor="@color/orangered"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/nan"
                        android:layout_width="100dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="10dp"
                        android:checked="true"
                        android:clickable="true"
                        android:text="男"
                        android:textColor="@color/orangered"
                        android:textSize="20dp" />
                    <RadioButton
                        android:id="@+id/nv"
                        android:layout_width="100dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="270dp"
                        android:checked="false"
                        android:text="女"
                        android:textColor="@color/orangered"
                        android:textSize="20dp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical">


            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/zhu_ce2"
                android:onClick="lijizhuce"
                android:text="立即注册"
                android:textColor="#FF4500"
                android:textSize="25dp" />

            <Button
                android:id="@+id/denglutiaozhuan"
                android:layout_width="120dp"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:onClick="denglutiaozhuan"
                android:text="已有账号？点此登录"
                android:textColor="@color/orangered"
                android:textSize="12dp">

            </Button>
        </LinearLayout>




    </LinearLayout>
</android.support.constraint.ConstraintLayout>