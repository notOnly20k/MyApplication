<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shangpinliebiao">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/coral"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:layout_height="wrap_content"
                android:onClick="fanhui"
                android:background="@color/coral"
                android:text="返回" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="-60dp"
                android:text="商品列表"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/moren"
                android:clickable="true"
                android:background="@drawable/layout_clickbg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/moren_text"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="默认"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/renqi"
                android:clickable="true"
                android:background="@drawable/layout_clickbg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/renqi_text"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="人气"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/shijian"
                android:clickable="true"
                android:background="@drawable/layout_clickbg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/shijian_text"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="时间"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/jiagedi"
                android:clickable="true"
                android:background="@drawable/layout_clickbg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/jiagedi_text"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="价格低"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/jiagegao"
                android:clickable="true"
                android:background="@drawable/layout_clickbg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/jiagegao_text"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="价格高"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:background="@color/white"
                android:id="@+id/goodslist"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
            <LinearLayout
                android:visibility="visible"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="暂时没相关商品"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/goods_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>